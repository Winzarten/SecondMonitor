<UserControl x:Class="SecondMonitor.WindowsControls.WPF.Graphs.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SecondMonitor.WindowsControls.WPF.Graphs"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid MinWidth="100" MinHeight="200">
            <wpf:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="None" Background="Black" Zoom="Xy" DisableAnimations="True" DataTooltip="{x:Null}">
                <wpf:CartesianChart.AxisY>
                    <wpf:Axis LabelFormatter="{Binding YFormatter}"/>
                </wpf:CartesianChart.AxisY>
                <wpf:CartesianChart.AxisX >
                    <wpf:Axis LabelFormatter ="{Binding XFormatter}" />
                </wpf:CartesianChart.AxisX>
            </wpf:CartesianChart>
        </Grid>
    </Grid>
</UserControl>
