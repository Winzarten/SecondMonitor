<UserControl
    x:Class="SecondMonitor.WindowsControls.WPF.PositionCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="mainControl"
    Width="300"
    d:DesignHeight="300"
    SizeChanged="UserControl_SizeChanged"
    mc:Ignorable="d">
    <Grid>
        <Canvas x:Name="canvas" SizeChanged="Canvas_SizeChanged">
            <Line
                x:Name="finnishLine"
                Canvas.Left="150"
                VerticalAlignment="Center"
                Panel.ZIndex="3"
                Stroke="Cyan"
                StrokeThickness="4"
                X1="0"
                X2="0"
                Y1="0"
                Y2="20" />
            <!--<Ellipse
            Fill="Yellow"
                Canvas.Left="0"
                Height="300"
                Width="300"
        StrokeThickness="2"
    Stroke="Black" HorizontalAlignment="Center"/>-->
        </Canvas>

    </Grid>
</UserControl>
