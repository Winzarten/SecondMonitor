<UserControl x:Class="ControlTestingApp.Controls.BarControlTestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControlTestingApp.Controls"
             xmlns:viewModels="clr-namespace:ControlTestingApp.ViewModels"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:BarChartViewModel/>
    </UserControl.DataContext>
    <Grid>
        <oxy:PlotView Model="{Binding PlotModel}" Background="{StaticResource Anthracite01Brush}"
                      Foreground="{StaticResource DarkRed01Brush}"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </oxy:PlotView>
    </Grid>
</UserControl>
